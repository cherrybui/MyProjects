@model IEnumerable<Library.Models.Item>
<p>
    <h3>Danh sách đã và đang mượn</h3>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                    @*<input type="number" asp-for="item.Amount" />*@
                </td>
                <td>
                    <a class="btn btn-dark" asp-controller="Items" asp-action="Borrow" asp-route-id="@item.ItemID" type="submit">Mượn</a>
                    <a class="btn btn-primary" asp-controller="Diaries" asp-action="Index" asp-route-id="@item.ItemID">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
